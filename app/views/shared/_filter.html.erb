<h4>Filter by style</h4>
<%= form_tag contents_path, method: :get do %>
   <div class="category-choices-index">
      <% Content::STYLES.each do |style| %>
        <div class="vertical-choice">
          <input type="checkbox" class="hidden" value="<%= style %>" name="content[style][]" id="post_category_ids_<%= style %>">
          <label for="post_category_ids_<%= style %>" class="category-choice small-category-choice" style='background-image: url(<%=image_path "icons/#{style.downcase.gsub(' ', '_')}.jpg"%>)'>
          </label>
          <!-- <p> <%= style %> </p> -->
        </div>
      <% end %>
    </div>
  <%= submit_tag "Filter", class: "btn btn-secondary filter-btn" %>
<% end %>

