<div class="new_container">
  <div class="form">
    <h2> Teach A Style </h2>
      <%= simple_form_for(@content) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :content_type, as: :radio_buttons, collection: [['Blog post'], ['Step-by-Step'], ['Video']], id: "content_type" %>
        <div class="photo_input hidden">
          <%= f.input :photo, as: :file, id: "photo" %>
        </div>
        <div class="video_input hidden">
          <%= f.input :video_url, placeholder: "Insert URL here", id: "video" %>
        </div>
          <br>
          <%= f.input :category, as: :select, collection: ["Artificial", "Chemical Treatment", "Natural", "Protection" ] %>
          <%= f.input :style, as: :select, collection: [ "Afro", "Bantu knots", "Dreadlocks", "Extensions",  "Faux locks", "Headscarves and Headwraps", "Jerri-curl", "Relaxed", "S-curl","Plaits", "Perms", "Weaves" ] %>
        </div>
        <%= f.submit class: "btn-primary" %>
      <% end %>
    <p><%= link_to ('<i class="fas fa-home"></i>').html_safe, contents_path, class: "btn-outline-success" %></p>
  </div>
</div>
