<div class="new_container">
  <div class="pages-container">
    <div class="form">
      <h2> Teach A Style </h2>
      <%= simple_form_for(@content) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <fieldset class="radio_buttons required content_content_type">
          <%# <legend class="col-form-label">Content type <abbr title="required">*</abbr></legend> %>
          <%# <div class="content-type-choices">
          <div class="row"> %>
          <div id="choices">
            <%= f.input :content_type, collection: ["Blog post", "Video"], label: false,  as: :radio_buttons, wrapper: :vertical_collection_inline %>
          </div>
            <%# <div class="form-check" id="blog-post">
              <input class="hidden" type="radio" id="content_content_type" >

              <label class="collection_radio_buttons" for="content_content_type_" value="Blog post" name="content[content_type]">Blog post</label>
            </div>
            <div class="form-check" id="video">
              <input class="hidden" type="radio" id="content_content_type" >
              <label class="collection_radio_buttons" for="content_content_type_" value="Video" name="content[content_type]">Video</label>
            </div> %>
          </div>
        </fieldset>

        <fieldset>
          <div class="photo_input hidden">
            <%= f.input :blog_image, as: :file, id: "photo" %>
            <%= f.input :text, :input_html => { :cols => 5, :rows => 8 } %>
          </div>
          <div class="video_input hidden">
            <p class="d-flex align-items-center mb-2 mt-2"> Video URL
              <span class="question-mark mt-0" data-toggle="modal" data-target="#embedModal">
                ?
              </span>
            </p>
            <%= render 'shared/modal'%>
            <%= f.input :video_url, placeholder: "Insert URL here", id: "video", label: false %>
          </div>
        </fieldest>

        <%= f.input :category, as: :select, collection: ["Artificial", "Chemical treatment", "Natural", "Protection" ] %>
        <%= f.input :style, as: :select, collection: [ "Afro", "Bantu knots", "Dreadlocks", "Extensions",  "Faux locks", "Headscarves and Headwraps", "Jerry-curl", "Relaxed", "S-curl","Plaits", "Perms", "Weaves" ] %>
        <%= f.submit class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
